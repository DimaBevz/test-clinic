{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@store/*": [
        "./store/*"
      ],
      "@layouts/*": [
        "./share/layouts/*"
      ],
      "@assets/*": [
        "./share/assets/*"
      ],
      "@components/*": [
        "./share/components/*"
      ],
      "@configs/*": [
        "./share/configs/*"
      ],
      "@constants/*": [
        "./share/constants/*"
      ],
      "@hooks/*": [
        "./share/hooks/*"
      ],
      "@contexts/*": [
        "./share/contexts/*"
      ],
      "@models/*": [
        "./share/models/*"
      ],
      "@interfaces/*": [
        "./share/interfaces/*"
      ],
      "@styles/*": [
        "./share/styles/*"
      ],
      "@utils/*": [
        "./share//utils/*"
      ],
      "@http-client/*": [
        "./share/http-client/*"
      ],
      "@features/*": [
        "./features/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@api/*": [
        "./share/api/*"
      ],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
